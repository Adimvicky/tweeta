<p class="tip">
 <img src="https://image.flaticon.com/icons/png/512/196/196970.png" style="height : 50px"/>
</p>
<div class="cont">
  <div class="form sign-in">
    <h2>Welcome back.</h2>
    <label>
      <span>Email / Handle</span>
      <input type="email" id="emailOrHandle"/>
    </label>
    <label>
      <span>Password</span>
      <input type="password" id="attemptPassword"/>
    </label>
    <p class="forgot-pass">Forgot password?</p>
    <button type="button" class="submit" id="signInBtn">Sign In</button>
    <button type="button" class="fb-btn">Connect with <span>facebook</span></button>
  </div>
  <div class="sub-cont">
    <div class="img">
      <div class="img__text m--up">
        <h2>New here?</h2>
        <p>Sign up and discover what everyone's talking about!</p>
      </div>
      <div class="img__text m--in">
        <h2>One of us?</h2>
        <p>If you already have an account, just sign in. We've missed you!</p>
      </div>
      <div class="img__btn">
        <span class="m--up">Sign Up</span>
        <span class="m--in">Sign In</span>
      </div>
    </div>
    <div class="form sign-up">
      <h2>Time to feel like home,</h2>
      <label>
        <span>Username</span>
        <input type="text" id='username'/>
      </label>
      <label>
        <span>Email</span>
        <input type="email" id='email'/>
      </label>
      <label>
        <span>Handle</span>
        <input type="text" id='handle'/>
      </label>
      <label>
        <span>Password</span>
        <input type="password" id='password'/>
      </label>
      <button type="button" class="submit" id="signUpBtn">Sign Up</button>
      <button type="button" class="fb-btn">Join with <span>facebook</span></button>
    </div>
  </div>
</div>
<script>

document.querySelector('.img__btn').addEventListener('click', function() {
    document.querySelector('.cont').classList.toggle('s--signup');
});

</script>



